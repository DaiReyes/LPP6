require "./lib/ppt.rb"

describe PiedraPapelTijeras do
   before :each do
      @ppt = PiedraPapelTijeras.new()
   end
       
   it "Debe existir una tirada para el humano" do
      @ppt.respond_to?("jugadahumano").should == TRUE
   end
   
   it "Debe existir una tirada para la maquina" do
      @ppt.respond_to?("jugadahumano").should == TRUE
   end
end